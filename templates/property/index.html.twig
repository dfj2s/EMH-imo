{% extends 'base.html.twig' %}

{% block title %}
    Nos biens
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="row align-items-end">
                <div class="col">
                    {{ form_row(form.prixMax) }}
                </div>
                <div class="col">
                    {{ form_row(form.surfaceMin) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <button class="btn btn-primary">
                        Rechercher
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container mt-4 text-center">
        <h1>
            voir nos biens
        </h1>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include 'property/_property.html.twig' %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
{% endblock %}
